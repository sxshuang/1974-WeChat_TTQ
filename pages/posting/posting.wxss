.postingContainer{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

.postingContainer .postingImg,.postingFunny{
    border: 1rpx solid #ccc;
    width: 320rpx;
    height: 320rpx;
    line-height: 320rpx;
    border-radius: 50%;
    margin-top: 20%;
    font-size: 40rpx;
    font-family: "楷体";
    font-weight: bold;
    box-shadow: 3rpx 3rpx 5rpx gray;
}

.postingContainer .postingImg{
    background-color: #fff;
}

.postingContainer .postingFunny{
    background-color: #000;
    color: #fff;
}